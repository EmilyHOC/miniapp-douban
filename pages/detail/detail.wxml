<view class="detailContainer">
    <image src="{{detailObj.imgSrc}}" class="headImg"></image>
    <view class="avatar_date">
        <image src="{{detailObj.avatar}}"></image>
        <text> {{detailObj.author}} {{detailObj.date}}</text>
    </view>
    <text class="title">{{detailObj.title}}</text>
    <view class="share_coll_container">
        <view class="share_coll">
            <image src="/images/icon/collection.png"></image>
            <image src="/images/icon/share.png"></image>
        </view>
        <view class="line"></view>
    </view>
    <button>转发此文章</button>
    <text class="content">{{detailObj.content}}</text>

</view>
