/* pages/detail/detail.wxss */
.detailContainer{
    display: flex;
    flex-direction: column;
}
.headImg{
    width:100%;
    height: 460rpx;
}
.avatar_date image{
    width:64rpx;
    height:64rpx;
    vertical-align: middle;
}
.avatar_date text{
    font-size: 28rpx;
    margin-left:10rpx;
}
.title{
    font-size: 38rpx;
    font-weight: bold;
    margin-left:10rpx;
}
.share_coll_container{
    position: relative;
}
.share_coll {
    float: right;
    margin-right: 50rpx;

}
.share_coll image{
    width:90rpx;
    height: 90rpx;
    margin-right:20rpx;
}
.line{
    width:90%;
    height: 1rpx;
    background-color: #eee;
    position: absolute;
    top:45rpx;
    left:5%;
    z-index: -1;
}
.content{
    margin-top:20rpx;
    font-size: 32rpx;
}